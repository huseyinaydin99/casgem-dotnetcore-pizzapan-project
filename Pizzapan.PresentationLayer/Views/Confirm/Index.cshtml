@model Pizzapan.PresentationLayer.Models.ConfirmViewModel

@{
    Layout = "~/Views/Shared/_RegisterView.cshtml";
}


<form method="post" asp-action="Index">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <input asp-for="UserName" class="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmCode" class="control-label"></label>
        <input asp-for="ConfirmCode" class="text" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>