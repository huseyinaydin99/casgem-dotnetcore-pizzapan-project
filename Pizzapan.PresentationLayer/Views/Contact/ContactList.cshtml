@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Mesajı Detayını Gör</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>

            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Subject</td>
            <td>@(((DateTime)item.SendDateMessage).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Contact/DetailsContact/@item.ContactId" class="btn btn-outline-info">Mesaj Detayı</a></td>
        </tr>
    }
</table>